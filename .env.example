# IoT Smart Thermometer Environment Configuration
# Copy this file to .env and modify as needed

# Device Configuration
DEVICE_ID=smart_thermometer_001
DEVICE_NAME=Smart Food Thermometer
DEVICE_LOCATION=Kitchen

# MQTT Configuration
MQTT_BROKER=test.mosquitto.org
MQTT_PORT=1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# Web Interface Configuration
WEB_HOST=localhost
WEB_PORT=5000
WEB_DEBUG=True

# Mobile App Configuration
MOBILE_HOST=localhost
MOBILE_PORT=5001

# Sensor Configuration
TEMP_MIN=10.0
TEMP_MAX=120.0
PRESSURE_MIN=0.5
PRESSURE_MAX=1.5

# Alarm Configuration
DEFAULT_ALARM_TEMPERATURE=100.0
DEFAULT_ALARM_TIME=600

# Blynk Configuration (if using Blynk)
# BLYNK_AUTH_TOKEN=your_blynk_token_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=smart_thermometer.log
